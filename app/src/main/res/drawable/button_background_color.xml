<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="#0070c0" />
    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="#bfbfbf" />
    <item android:state_enabled="true" android:color="#0070c0"/>
