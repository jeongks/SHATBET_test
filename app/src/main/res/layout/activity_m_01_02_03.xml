<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".M_01_02_03">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_m_01_02_03_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="휴대폰 번호 인증"
            android:textSize="25sp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edit_m_01_02_03_id"
        android:layout_width="wrap_content"
        android:minWidth="380dp"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:hint="아이디"/>
    <EditText
        android:id="@+id/edit_m_01_02_03_pw"
        android:layout_width="wrap_content"
        android:minWidth="380dp"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:hint="비밀번호(10자~20자)"/>
    <EditText
        android:id="@+id/edit_m_01_02_03_pw_confirm"
        android:layout_width="wrap_content"
        android:minWidth="380dp"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:hint="비밀번호 재입력"/>

    <Button
        android:id="@+id/btn_m_01_02_03_save"
        android:layout_width="wrap_content"
        android:minWidth="380dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_shape_m_01_03_01_login"
        android:text="계정정보 입력 완료"
        android:textSize="15sp"/>

</LinearLayout>