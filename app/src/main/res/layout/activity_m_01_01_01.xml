<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".M_01_01_01">

    <TextView
        android:id="@+id/text_head_m_01_01_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHAHBET"
        android:textColor="#fff"
        android:textSize="30sp"
        android:background="#0070c0"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_m_01_01_01_hi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@id/text_head_m_01_01_01"/>

    <Button
        android:id="@+id/btn_m_01_01_01_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40dp"
        android:text="로그인하고 게임하기"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="291dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_m_01_01_01_hi"/>

    <ImageButton
        android:id="@+id/imgBtn_m_01_01_01_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_m_01_01_01_game_80"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imgBtn_m_01_01_01_predict"
        app:layout_constraintTop_toBottomOf="@+id/btn_m_01_01_01_login" />

    <ImageButton
        android:id="@+id/imgBtn_m_01_01_01_predict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_m_01_01_01_predict_80"
        app:layout_constraintLeft_toRightOf="@id/imgBtn_m_01_01_01_game"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_m_01_01_01_login" />


</androidx.constraintlayout.widget.ConstraintLayout>