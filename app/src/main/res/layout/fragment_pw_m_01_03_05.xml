<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".M_01_03_05_Fragment_pw">

    <EditText
        android:id="@+id/edit_m_01_03_05_id"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:minWidth="380dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:hint="아이디"
        android:gravity="start"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingVertical="20dp"/>


    <EditText
        android:id="@+id/edit_m_01_03_05_name"
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:minWidth="380dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:hint="성명"
        android:gravity="start"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingVertical="20dp"/>

    <EditText
        android:id="@+id/edit_m_01_03_05_phone"
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="380dp"
        android:layout_marginHorizontal="15dp"
        android:hint="휴대폰번호"
        android:gravity="start"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingVertical="20dp"/>

    <EditText
        android:id="@+id/edit_m_01_03_05_verification"
        android:layout_marginTop="270dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="380dp"
        android:layout_marginHorizontal="15dp"
        android:hint="인증번호"
        android:gravity="start"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingVertical="20dp"/>
    <Button
        android:id="@+id/btn_m_01_03_05_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_m_01_03_01_login"
        android:enabled="false"
        android:text="인증번호 받기"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="290dp"
        android:padding="3dp"/>


    <Button
        android:id="@+id/btn_m_01_03_05_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/button_shape_m_01_03_01_login"
        android:enabled="false"
        android:minWidth="380dp"
        android:text="인증 완료" />

</FrameLayout>